<div class="page-header">
  <h1>
    Tags for your bullets
  </h1>
  <!-- NEW TAG SECTION ................................................... -->
  <!-- Validation failure messages -->
  <% if @tag.errors.any? %>
    <% @tag.errors.full_messages.each do |message| %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <% end %>
  <% end %>
  <br>

  <div class="row">
    <div class="col-md-12">
      <form action="/create_tag" method="post">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <!-- Label and input for name -->
        <div class="form-group">
          <!-- <label for="name" class="control-label">
            Tag name
          </label> -->

          <input type="text" id="name" name="name" placeholder="Add tag name and press enter" class="form-control" value="<%= @tag.name %>">
        </div>
        <!-- <button class="btn btn-success">
          Create Tag
        </button> -->
        <!-- or
        <a href="/tags">Cancel</a> -->
      </form>
    </div>
  </div>
<br>

<!-- VIEW TAGS ..........................................................  -->
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Tag name</th>
        <th>Actions</th>
      </tr>

      <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td>
          <a href="/tags/<%= tag.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tag/<%= tag.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @tags, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

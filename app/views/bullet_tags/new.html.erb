<!-- Validation failure messages -->
<% if @bullet_tag.errors.any? %>
  <% @bullet_tag.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Bullet Tag</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_bullet_tag" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for bullet_id -->
      <div class="form-group">
        <label for="bullet_id" class="control-label">
          Bullet
        </label>

        <%= select_tag(:bullet_id, options_from_collection_for_select(Bullet.all, :id, :body, @bullet_tag.bullet_id), :class => "form-control") %>
      </div>

      <!-- Label and input for tag_id -->
      <div class="form-group">
        <label for="tag_id" class="control-label">
          Tag
        </label>

        <%= select_tag(:tag_id, options_from_collection_for_select(Tag.all, :id, :name, @bullet_tag.tag_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Bullet Tag
      </button>
      or
      <a href="/bullet_tags">Cancel</a>
    </form>
  </div>
</div>

<div class="page-header">
  <h3>Saved Statement #<%= @saved_statement.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Statement</dt>
      <dd><%= @saved_statement.statement_id %></dd>

      <dt>Resume</dt>
      <dd><%= @saved_statement.resume_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/saved_statements" class="btn btn-primary">
        Back
      </a>
      <a href="/saved_statements/<%= @saved_statement.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_saved_statement/<%= @saved_statement.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<div class="page-header">
  <h1>
    Saved statements
    <a href="/saved_statements/new" class="btn btn-lg btn-success">New Saved statement</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Statement</th>
        <th>Resume</th>
        <th>Actions</th>
      </tr>

      <% @saved_statements.each do |saved_statement| %>
      <tr>
        <td>
          <% if saved_statement.statement.present? %>
            <a href="/statements/<%= saved_statement.statement.id %>">
              <%= saved_statement.statement.body %>
            </a>
          <% end %>
        </td>
        <td>
          <% if saved_statement.resume.present? %>
            <a href="/resumes/<%= saved_statement.resume.id %>">
              <%= saved_statement.resume.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/saved_statements/<%= saved_statement.id %>" class="btn btn-primary">Show</a>
          <a href="/saved_statements/<%= saved_statement.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_saved_statement/<%= saved_statement.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @saved_statements, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

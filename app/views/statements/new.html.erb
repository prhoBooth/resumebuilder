<!-- Validation failure messages -->
<% if @statement.errors.any? %>
  <% @statement.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Statement</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_statement" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"><%= @statement.body %></textarea>
      </div>

      <!-- Label and input for type -->
      <div class="form-group">
        <label for="category" class="control-label">
          Type
        </label>

        <input type="text" id="category" name="category" placeholder="category" class="form-control" value="<%= @statement.category %>">
      </div>

      <button class="btn btn-success">
        Create Statement
      </button>
      or
      <a href="/statements">Cancel</a>
    </form>
  </div>
</div>

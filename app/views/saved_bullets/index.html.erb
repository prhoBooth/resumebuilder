<div class="page-header">
  <h1>
    Saved bullets
    <a href="/saved_bullets/new" class="btn btn-lg btn-success">New Saved bullet</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Bullet</th>
        <th>Resume</th>
        <th>Actions</th>
      </tr>

      <% @saved_bullets.each do |saved_bullet| %>
      <tr>
        <td>
          <% if saved_bullet.bullets.present? %>
            <a href="/bullets/<%= saved_bullet.bullets.id %>">
              <%= saved_bullet.bullets.body %>
            </a>
          <% end %>
        </td>
        <td>
          <% if saved_bullet.resume.present? %>
            <a href="/resumes/<%= saved_bullet.resume.id %>">
              <%= saved_bullet.resume.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/saved_bullets/<%= saved_bullet.id %>" class="btn btn-primary">Show</a>
          <a href="/saved_bullets/<%= saved_bullet.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_saved_bullet/<%= saved_bullet.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @saved_bullets, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

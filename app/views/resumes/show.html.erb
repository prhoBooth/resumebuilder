<div class="page-header">
  <h3>Resume #<%= @resume.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @resume.user_id %></dd>

      <dt>Name</dt>
      <dd><%= @resume.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/resumes" class="btn btn-primary">
        Back
      </a>
      <a href="/resumes/<%= @resume.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_resume/<%= @resume.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Resume has many saved_bullets -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Saved_bullets
      </li>

      <% @resume.saved_bullets.each do |saved_bullet| %>
        <li class="list-group-item">
          <a href="/saved_bullets/<%= saved_bullet.id %>">
            <%= saved_bullet.id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/saved_bullets/<%= saved_bullet.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/saved_bullets/<%= saved_bullet.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_saved_bullet/<%= saved_bullet.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<div class="page-header">
  <h3>Resume #<%= @resume.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @resume.user.present? %>
          <a href="/users/<%= @resume.user_id %>">
            <%= @resume.user.username %>
          </a>
        <% end %>
      </dd>

      <dt>Name</dt>
      <dd><%= @resume.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/resumes" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @resume.user %>
        <a href="/resumes/<%= @resume.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_resume/<%= @resume.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

<!-- A Resume has many saved_bullets -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Saved_bullets
      </li>

      <% @resume.saved_bullets.each do |saved_bullet| %>
        <li class="list-group-item">
          <a href="/saved_bullets/<%= saved_bullet.id %>">
            <%= saved_bullet.id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/saved_bullets/<%= saved_bullet.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/saved_bullets/<%= saved_bullet.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_saved_bullet/<%= saved_bullet.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_saved_bullet" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for bullet_id -->
      <div class="form-group">
        <label for="bullet_id" class="control-label">
          Bullet
        </label>

        <%= select_tag(:bullet_id, options_from_collection_for_select(Bullet.all, :id, :body), :class => "form-control") %>
      </div>

      <!-- Label and input for resume_id -->
      <input type="hidden" name="resume_id" value="<%= @resume.id %>">

      <button class="btn btn-block btn-success">
        Create Saved Bullet
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

